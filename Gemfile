source "https://rubygems.org"

group :development do
  gem 'bundler', '~> 1.0'
  gem 'jeweler'
  gem 'pry-byebug', :platforms => :ruby_20
end

group :test do
  gem 'rake'
  gem 'rcov', :platforms => :mri_18
  gem 'simplecov', :require => false, :platforms => :mri_19
  gem 'simplecov-html', :platforms => :mri_19
  gem 'rspec'
  gem 'guard-rspec'
end

